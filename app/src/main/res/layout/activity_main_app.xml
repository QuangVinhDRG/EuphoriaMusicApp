<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainAppActivity"
    android:background="@drawable/app_background_gradient_45deg"
    android:id="@+id/rlMainApp"
    android:paddingTop="30dp">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/miniPlayMusic"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_navigation"
        app:itemTextColor="@color/custom_color_navigation"
        app:itemIconTint="@color/custom_color_navigation"/>
    <include
        android:id="@+id/miniPlayMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/mini_playing_music"
        android:layout_above="@id/bottomNavigation"/>
</RelativeLayout>