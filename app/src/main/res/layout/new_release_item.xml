<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="16dp"
            android:layout_marginEnd="10dp">
            <ImageView
                android:id="@+id/ivNewRelease"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/noi_nay_co_anh_image"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNewReleaseSongName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nơi này có anh"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvNewReleaseAuthorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sơn Tùng M-TP"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvNewReleaseTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hôm qua"
                android:textSize="16sp"/>
        </LinearLayout>
        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@null"
            android:src="@drawable/more_icon"
            android:scaleType="centerCrop"/>
    </LinearLayout>
</LinearLayout>