<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/welcome_background">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:src="@drawable/headphone"
        android:layout_centerHorizontal="true"
        android:alpha="0.7"
        android:translationY="-200dp"/>
    <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-black"
        android:textStyle="italic"
        android:textColor="@color/pinkColor"/>
    <TextView
        android:id="@+id/tvWelcomeBack"
        android:layout_below="@id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back!"
        android:textSize="40sp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-black"
        android:textStyle="italic"
        android:textColor="@color/blueColor"/>
    <ImageButton
        android:id="@+id/loginTab"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/rectangle_border_radius"/>
    <ImageButton
        android:id="@+id/btnShowLogin"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/double_arrow"
        android:layout_above="@+id/loginTab"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/euphoria_text"
        android:layout_above="@+id/loginTab"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="20dp"/>
    <LinearLayout
        android:layout_below="@+id/tvWelcomeBack"
        android:layout_marginTop="30dp"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:background="@drawable/rectangle_border_radius">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/black_line"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter to your Account"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:paddingStart="50dp"
                android:layout_marginTop="30dp"
                android:paddingBottom="10dp"/>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="360dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_signup_input_box"
                android:backgroundTint="@null"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:paddingStart="50dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"/>

            <EditText
                android:id="@+id/edtpass"
                android:layout_width="360dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_signup_input_box"
                android:backgroundTint="@null"
                android:drawableEnd="@drawable/hide_password_24"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Forgot the password?"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:clickable="true"
            android:textColor="@color/black"/>
        <android.widget.Button
            android:id="@+id/btnLogin"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_signup_button"
            android:layout_gravity="center_horizontal"
            android:text="Login"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-black"
            android:textSize="26sp"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btnLoginWithGoogle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/google_logo" />

            <ImageView
                android:id="@+id/btnLoginWithGithub"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/githubicon" />

            <ImageView
                android:id="@+id/btnLoginWithfb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook_logo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textSize="17sp"
                android:paddingEnd="5dp"/>
            <TextView
                android:id="@+id/tvSignUp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/lightPinkColor"
                android:text="Sign up"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>