<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRankingNumber"
            android:text="1"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="5dp">
            <ImageView
                android:id="@+id/ivRankingSongImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/le_luu_ly_image"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tvRankingSongName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lệ Lưu Ly"
                android:textStyle="bold"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/tvRankingSongAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vũ Phụng Tiên, DT Tập Rap"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@null"
                android:src="@drawable/more_horizontal_icon"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>