<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.playlist.SongFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/controlFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/favourite_song_background"
        android:paddingBottom="30dp">
        <RelativeLayout
            android:id="@+id/headerBar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp">
            <ImageButton
                android:layout_centerVertical="true"
                android:id="@+id/ibBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left_black_24"
                android:background="@null"
                android:translationX="-5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Bài hát yêu thích"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:paddingRight="10dp">
                <ImageButton
                    android:id="@+id/ibSetting"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/more_2_icon"
                    android:scaleType="centerCrop"
                    android:background="@null"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/numberOfSongFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tvFavouriteNumberOfSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" bài hát"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </LinearLayout>
        <android.widget.Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btnRandomPlay"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:text="Phát ngẫu nhiên"
            android:background="@drawable/random_play_background"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="false"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lvFavouriteSong"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/controlFrame"/>
</RelativeLayout>