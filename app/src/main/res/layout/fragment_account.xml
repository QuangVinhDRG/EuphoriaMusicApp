<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AccountFragment"
    android:orientation="vertical"
    android:id="@+id/rlAccountFragmentLayout">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp">
        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left_black_24"
            android:background="@null"
            android:translationX="-5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Cá nhân"
            android:textSize="25sp"
            android:textColor="@color/pinkColor"
            android:textStyle="bold"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:paddingRight="10dp">
            <ImageButton
                android:id="@+id/ibSetting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/settings_icon"
                android:scaleType="centerCrop"
                android:background="@null"/>
            <ImageButton
                android:id="@+id/ibNotification"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bell_icon"
                android:scaleType="centerCrop"
                android:background="@null"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/accountInformation"
        android:layout_below="@id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avatar"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Như Quỳnh"
                android:textSize="27sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="basic"
                    android:textAllCaps="true"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@color/lightPinkColor"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/accountInformation"
        android:layout_centerHorizontal="true"
        android:id="@+id/upgradeAccount"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="Nâng cấp tài khoản"
        android:textColor="@color/white"
        android:background="@drawable/upgrade_account_text_background"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="13sp"
        android:textAllCaps="true"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"/>
    <TextView
        android:id="@+id/personalTitle"
        android:layout_below="@id/upgradeAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cá nhân"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:id="@+id/personalContent"
        android:layout_below="@id/personalTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/follow_icon"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh sách quan tâm"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/blocked_icon"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh sách chặn"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/recent_icon"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh sách tạm ẩn"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/personalContent">
        <LinearLayout
            android:id="@+id/llLogout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="20dp">
            <ImageView
                android:id="@+id/ivLogout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/logout_icon"
                android:scaleType="centerCrop"
                android:clickable="true"/>
            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:clickable="true"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llAboutUs"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="20dp">
            <ImageView
                android:clickable="true"
                android:id="@+id/ivAboutUs"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/group_icon"
                android:scaleType="centerCrop"/>
            <TextView
                android:clickable="true"
                android:id="@+id/tvAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Về chúng tôi"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>