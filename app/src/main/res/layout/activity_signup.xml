<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="@drawable/signup_background"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left_24"
        android:background="@null"
        android:translationX="-20dp"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Create new Account"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="20dp"
        android:layout_below="@id/btnBack"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_border_radius"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="50dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/black_line"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:layout_width="360dp"
            android:layout_height="55dp"
            android:backgroundTint="@null"
            android:background="@drawable/login_signup_input_box"
            android:layout_gravity="center_horizontal"
            android:hint="Username"
            android:paddingStart="20dp"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:layout_width="360dp"
            android:layout_height="55dp"
            android:backgroundTint="@null"
            android:background="@drawable/login_signup_input_box"
            android:layout_gravity="center_horizontal"
            android:hint="Email"
            android:paddingStart="20dp"
            android:layout_marginBottom="20dp"
            android:inputType="textEmailAddress"/>
        <EditText
            android:layout_width="360dp"
            android:layout_height="55dp"
            android:backgroundTint="@null"
            android:background="@drawable/login_signup_input_box"
            android:layout_gravity="center_horizontal"
            android:hint="Password"
            android:paddingStart="20dp"
            android:layout_marginBottom="20dp"
            android:drawableEnd="@drawable/hide_password_24"
            android:paddingEnd="20dp"
            android:inputType="textPassword"/>
        <EditText
            android:layout_width="360dp"
            android:layout_height="55dp"
            android:backgroundTint="@null"
            android:background="@drawable/login_signup_input_box"
            android:layout_gravity="center_horizontal"
            android:hint="Re - Password"
            android:paddingStart="20dp"
            android:drawableEnd="@drawable/hide_password_24"
            android:paddingEnd="20dp"
            android:inputType="textPassword"/>
        <android.widget.Button
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:background="@drawable/login_signup_button"
            android:layout_gravity="center_horizontal"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-black"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="10dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
</RelativeLayout>